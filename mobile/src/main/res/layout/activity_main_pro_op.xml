<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#00023E"
    tools:context=".MainActivityProOp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:layout_marginTop="25dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!-- Left: Profile + Username + Rating -->
            <LinearLayout
                android:layout_width="165dp"
                android:layout_height="174dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/progirl1" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="\@emily_01"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/service_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERVICE PROVIDER"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/profile_rating"
                    android:layout_width="230dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="5"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    android:stepSize="1"
                    android:theme="@style/RatingBarWhite" />


            </LinearLayout>

            <!-- Right: Personal Info -->
            <LinearLayout
                android:layout_width="186dp"
                android:layout_height="302dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- NAME ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_blueandwhite"
                        android:padding="2dp"
                        android:text="NAME:"
                        android:textColor="#00023E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#132156"
                        android:padding="2dp"
                        android:text="EMILY SMITH"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- PROF ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blueandwhite"
                        android:padding="2dp"
                        android:text="PROF:"
                        android:textColor="#00023E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#132156"
                        android:padding="2dp"
                        android:text="PROFESSIONAL"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- LOC ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blueandwhite"
                        android:padding="2dp"
                        android:text="LOC:"
                        android:textColor="#00023E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#132156"
                        android:padding="2dp"
                        android:text="MARAMAG"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- EMAIL ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blueandwhite"
                        android:padding="2dp"
                        android:text="EMAIL:"
                        android:textColor="#00023E"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#132156"
                        android:padding="2dp"
                        android:text="ethanclark@gmail.com"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Quick Link Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- Message -->
                    <LinearLayout
                        android:id="@+id/mess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/messwhite" />

                        <TextView
                            android:id="@+id/edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Availability -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/history3rmvbg" />

                        <TextView
                            android:id="@+id/transaction_history"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available for Service"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>


                    <!-- Book Now -->
                    <LinearLayout
                        android:id="@+id/loggingout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/bookk_rembg" />

                        <TextView
                            android:id="@+id/logout"
                            android:layout_width="57dp"
                            android:layout_height="match_parent"
                            android:text="Book Now"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Ratings & Reviews -->



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RATINGS &amp; REVIEWS"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Multiple Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to rate and write review"
                android:textStyle="bold"
                android:textColor="#00023E">
            </EditText>

        </LinearLayout>
        <!-- Review 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/progirl1"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@franky_05"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super responsive and reliable service!"
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5"
                    android:isIndicator="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>

        <!-- Review 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/progirl2"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@alexa99"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good on-time job, needs more precision."
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3"
                    android:isIndicator="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>

        <!-- Review 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/proboy3"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@davesmith"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wouldn't hire again, not up to my standards."
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2"
                    android:isIndicator="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>

        <!-- Review 4 -->

        <!-- Review 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/progirl4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@nancyluz"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Really impressed with the quality of service!"
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/proboy2"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@s_john"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prompt response made the whole process go"
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>

        <!-- Review 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_2_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/proboy3"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\@s_johnny"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prompt response made the whole process go"
                    android:textColor="#333333"
                    android:textSize="11sp" />

                <RatingBar
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4"
                    android:isIndicator="true" />
            </LinearLayout>

            <ImageView
                android:layout_width="49dp"
                android:layout_height="47dp"
                android:layout_gravity="top"
                android:src="@drawable/dotsrmvbg" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>